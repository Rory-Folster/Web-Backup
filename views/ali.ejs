<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

    <table class="table table-striped">
        <tr class="bg-info">
            <th>Cust ID</th>
            <th>Admin</th>
            <th>Username</th>
            <th>Email</th>
        </tr>

        <tbody id="myTable">
        </tbody>
    </table>

    <script>
        const api_url = 'http://localhost:4000/api/customers/all' 

        async function getData() {
            const res = await fetch(api_url);
            const data = await res.json();
            const [{ _id, admin, username, email }] = data;
            console.log(data)

            var table = document.getElementById('myTable')

        for (var i = 0; i < data.length; i++) {   
            var row = `
                <tr>
                <td>${data[i]._id}</td>
                <td>${data[i].admin}</td>
                <td>${data[i].username}</td>
                <td>${data[i].email}</td>
                </tr>`
            table.innerHTML += row

}}


        getData();
    </script>
</body>
</html>